<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="8dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/moviePosterFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_pilp_fiction_foreground" />

                <TextView
                    android:id="@+id/movieNameFrist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/moviePosterFirst"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Testing purpose"
                    android:layout_marginTop="8dp"/>


                <Button
                    android:id="@+id/movieBtnFirst"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/movieNameFrist"
                    app:layout_constraintStart_toEndOf="@id/moviePosterFirst"
                    android:text="@string/details" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/moviePosterSecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_fight_club_foreground" />

                <TextView
                    android:id="@+id/movieNameSecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/moviePosterSecond"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Testing purpose"
                    android:layout_marginTop="8dp"/>


                <Button
                    android:id="@+id/movieBtnSecond"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/movieNameSecond"
                    app:layout_constraintStart_toEndOf="@id/moviePosterSecond"
                    android:text="@string/details" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/moviePosterThird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_300_foreground" />

                <TextView
                    android:id="@+id/movieNameThird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/moviePosterThird"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Testing purpose"
                    android:layout_marginTop="8dp"/>


                <Button
                    android:id="@+id/movieBtnThird"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/movieNameThird"
                    app:layout_constraintStart_toEndOf="@id/moviePosterThird"
                    android:text="@string/details" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/moviePosterFourth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_indiana_jones_foreground" />

                <TextView
                    android:id="@+id/movieNameFourth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/moviePosterFourth"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Testing purpose"
                    android:layout_marginTop="8dp"/>


                <Button
                    android:id="@+id/movieBtnFourth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toBottomOf="@id/movieNameFourth"
                    app:layout_constraintStart_toEndOf="@id/moviePosterFourth"
                    android:text="@string/details" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/inviteBtn"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/invite"
                />
        </LinearLayout>
    </ScrollView>


</androidx.appcompat.widget.LinearLayoutCompat>